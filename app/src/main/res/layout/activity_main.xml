<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".view.impl.MainActivity">
    <RelativeLayout
        android:id="@+id/myrelative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarMainActivity"
            android:background="#1743E6"
            app:title="Beauty Music"
            app:titleTextColor="#F5EFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_below="@+id/toolBarMainActivity"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/myTabLayout"
                app:tabIndicatorColor="#e90b0b"
                app:tabMode="fixed"
                app:tabTextColor="#EEEBEE"
                app:tabIndicatorHeight="2dp"
                android:background="#0C72C4"
                app:tabSelectedTextColor="#C715A3"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/myViewPager"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"></android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/img"
                android:src="@drawable/ic_song"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="60dp">
                <TextView

                    android:textSize="18sp"
                    android:textColor="#000"
                    android:id="@+id/tvNameSong"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
                <TextView

                    android:textColor="#000"
                    android:id="@+id/tvNameArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>
            <ImageButton
                android:scaleType="fitXY"
                android:id="@+id/imgPlay"
                android:layout_gravity="center"
                android:src="@drawable/ic_pause"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageButton
                android:scaleType="fitXY"
                android:visibility="gone"
                android:id="@+id/imgPause"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </RelativeLayout>




</android.support.v4.widget.DrawerLayout>