<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/image5"
            android:id="@+id/image_avatar_song_notifi"
            android:layout_width="@dimen/dp_48"
            android:layout_height= "@dimen/dp_48"
            android:layout_margin="@dimen/dp_8"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_song_name_notifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:textSize="@dimen/dp_18"
                android:textColor="#000"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                />

            <TextView
                android:id="@+id/text_artist_notifi"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_height="@dimen/dp_0"
                android:textColor="#000"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"/>
        </LinearLayout>

        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/image_previous_notifi"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:background="#000"
            android:src="@drawable/ic_prev" />
        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/image_play_notifi"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_stop" />
        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/image_next_notifi"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:background="#000"
            android:src="@drawable/ic_next" />
    </LinearLayout>
</LinearLayout>
